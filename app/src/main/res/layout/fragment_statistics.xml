<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Page Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:textColor="@android:color/black" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track your best performances and review your jump rope progress here!"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="24dp"
            android:textColor="@android:color/darker_gray" />

        <!-- Most Jumps in a Row Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Jumps in a Row"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/most_jumps_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="36sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:paddingBottom="24dp" />

        <!-- Fastest Jumping Speed Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fastest Jumping Speed"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/fastest_speed_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 Jumps/Min"
            android:textSize="36sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:paddingBottom="24dp" />
    </LinearLayout>
</ScrollView>
